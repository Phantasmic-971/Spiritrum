using Terraria;
using Terraria.ID;
using Terraria.ModLoader;

namespace Spiritrum.Content.Items.Weapons
{
    public class BromiumPistol : ModItem
    {
        public override void SetStaticDefaults()
        {
            DisplayName.SetDefault("Bromium Pistol");
            Tooltip.SetDefault("A sleek pistol forged from Bromium. Fires a single shot.");
        }

        public override void SetDefaults()
        {
            Item.width = 40;
            Item.height = 20;
            Item.useStyle = ItemUseStyleID.Shoot;
            Item.useTime = 13;
            Item.useAnimation = 13;
            Item.autoReuse = true;
            Item.shoot = ProjectileID.Bullet; // Uses vanilla bullet
            Item.shootSpeed = 16f;
            Item.damage = 25;
            Item.knockBack = 3f;
            Item.crit = 6;
            Item.DamageClass = DamageClass.Ranged;
            Item.value = Item.sellPrice(gold: 5);
            Item.rare = ItemRarityID.Orange;
            Item.UseSound = SoundID.Item11; // Sound of firing
            Item.useAmmo = AmmoID.Bullet; // Uses standard bullets as ammo
        }

        public override void AddRecipes()
        {
            Recipe recipe = CreateRecipe();
            recipe.AddIngredient(ItemID.BromiumBar, 15); // Requires 15 Bromium Bars
            recipe.AddTile(TileID.Anvils); // Crafted at an Anvil
            recipe.Register();
        }
    }
}
